<div class="container new_register">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Crear nueva entrada de blog:</h1>
      <%= form_for(@blog_entry) do |blog_entry| %>
        <% if @blog_entry.errors.any? %>
          <% @blog_entry.errors.each do |attribute, message| %>
            <h3 class="validation-error"><%= message %></h3>
          <% end %>
        <% end %>
        <%= render 'blog_entry_fields', blog_entry: blog_entry %>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>
