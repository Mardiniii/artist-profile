<div class="container new_register">
  <div class="row">
    <h1 class="text-center">Eventos</h1>
    <div class="col-md-12">
      <table class="table">
        <thead>
          <th>Número</th>
          <th>Imagen</th>
          <th>Primer Texto</th>
          <th>Opciones</th>
        </thead>
        <tbody>
          <% @slides.each_with_index do |slide,index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= image_tag slide.image.url(:thumb) %></td>
              <td><%= slide.first_text %></td>
              <td><%= link_to "Editar", edit_slide_path(slide) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <h1 class="text-center">Imágenes</h1>
    <div class="col-md-12">
      <table class="table">
        <thead>
          <th>Número</th>
          <th>Imagen</th>
          <th>Ubicación</th>
          <th>Tamaño</th>
          <th>Opciones</th>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td><%= image_tag @about_me.image.url(:thumb) %></td>
            <td><%= @about_me.first_text %></td>
            <td><%= @about_me.second_text %></td>
            <td><%= link_to "Editar", edit_slide_path(@about_me) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 text-center col-md-offset-3" id="btn-new-user">
      <%= link_to "Regresar al Home", root_path, :class => 'btn btn-lg btn-danger' %>
    </div>
</div>