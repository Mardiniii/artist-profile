<div class="rock_footer rock_padding_20">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="rock_footer_logo"> <img src="<%= asset_path('Logo1.png') %>" alt="footer logo" /> </div>
        <h3><%= @copies.footer_title_1 %></h3>
        <p><%= @copies.footer_text_1 %></p>
        <h3><%= @copies.footer_title_2 %></h3>
        <p><%= @copies.footer_text_2 %></p>
        <h3><%= @copies.footer_title_3 %></h3>
        <p><%= @copies.footer_text_3 %></p>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="rock_recent_post">
          <h3>Artículos Recientes</h3>
          <ul class="bxslider">
            <% @footer_blog_entries.each do |blog_entry| %>
              <li> <img src="<%= blog_entry.image.url(:thumb) %>" alt="post" />
                <div class="rock_post_detail"> <%= link_to blog_entry.title, blog_entry_path(blog_entry) %>
                  <p><span class="label label-default"><%= blog_entry.created_at.strftime("%B %d, %Y") %></span></p>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="rock_recent_post">
          <h3>Próximos Eventos</h3>
          <ul class="bxslider">
            <% @footer_events.each do |event| %>
              <li>
                <img src="<%= event.image.url(:thumb) %>" alt="post" />
                <div class="rock_post_detail"> <a href="javascript:void(0);" style="cursor: text;"><%= event.title %></a>
                  <p><span class="label label-default"><%= event.event_date.strftime("%B %d, %Y") %></span></p>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="rock_copyright">
  <div class="rock_copyright_bg">
    <section class="main">
      <div id="ri-grid2" class="ri-grid ri-grid-size-3">
