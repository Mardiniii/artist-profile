          <!-- Background Images from AWS -->
          <% @footer_images.each do |background_image| %>
            <li><a href="#"><img src="<%= background_image.image.url(:medium) %>" alt="" /></a></li>
          <% end %>
        </ul>
      </div>
    </section>
  </div>
  <div class="rock_copyright_div">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-6 col-sm-12">
          <p>Ana Catalina</p>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="rock_social">
            <ul>
              <li><a href="https://www.facebook.com/AnaCatalina1" target="_blank"><i class="fa fa-facebook"></i></a></li>
              <li><a href="https://www.instagram.com/anacatalina_1/" target="_blank"><i class="fa fa-instagram"></i></a></li>
