            <div class="actions form-group text-center">
              <%= link_to "Cancelar", root_path, :class => 'btn btn-lg btn-danger' %>
              <%= copy.submit "Guardar Contenido", class: "btn btn-ar btn-lg btn-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
