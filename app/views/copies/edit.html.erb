<div class="container new_register">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center"><strong>Editar contenido de la página:</strong></h1>
      <%= form_for(@copy) do |copy| %>
        <div class="row">
          <% if @copy.errors.any? %>
            <% @copy.errors.each do |attribute, message| %>
              <h3 class="validation-error"><%= message %></h3>
            <% end %>
          <% end %>
          <div class="col-md-6">
            <h2 class="form-copie-title"><strong>Contenido Inicial</strong></h2>
            <div class="field form-group">
              <%= copy.label :home_title_1, "Título Home:", class: "lead lead-lg" %>
              <%= copy.text_field :home_title_1, required: true, class: "form-control", id: "new_user_email" %>
            </div>

            <div class="field form-group">
              <%= copy.label :home_text, "Texto Home:", class: "lead lead-lg" %>
              <%= copy.text_area :home_text, required: true, rows: 5, class: "form-control", id: "new_user_email" %>
            </div>

            <h2 class="form-copie-title"><strong>Contenido del Footer</strong></h2>
            <div class="field form-group">
              <%= copy.label :footer_title_1, "Título Footer 1:", class: "lead lead-lg" %>
