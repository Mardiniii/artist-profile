            </div>

            <div class="field form-group">
              <%= copy.label :footer_text_1, "Texto Footer 1:", class: "lead lead-lg" %>
              <%= copy.text_field :footer_text_1, required: true, rows: 5, class: "form-control", id: "new_user_email" %>
            </div>

